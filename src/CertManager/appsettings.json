{
	"AllowedHosts": "*",
	"Serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File",
			"Serilog.Exceptions"
		],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Microsoft.AspNetCore": "Warning",
				"System": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "%BASEDIR%/Logs/CertManager.log",
					"rollingInterval": "Day",
					"retainedFileCountLimit": 31,
					"formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithExceptionDetails"
		]
	}
}